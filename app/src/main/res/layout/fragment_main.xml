<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yan.co.grape.MainActivityFragment"
    tools:showIn="@layout/activity_main">

<!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />
-->

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="今日动态"
        android:id="@+id/dynamic"
        android:layout_marginTop="46dp"
        android:textColor="#3c55a8"
        android:allowUndo="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="产品管理"
        android:id="@+id/productManagement"
        android:layout_marginTop="44dp"
        android:textColor="#3c55a8"
        android:layout_below="@+id/dynamic"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="客户管理"
        android:id="@+id/customerManagement"
        android:layout_marginTop="44dp"
        android:textColor="#3c55a8"
        android:layout_below="@+id/productManagement"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="查看评价"
        android:id="@+id/evaluate"
        android:layout_marginTop="44dp"
        android:textColor="#3c55a8"
        android:layout_below="@+id/customerManagement"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
